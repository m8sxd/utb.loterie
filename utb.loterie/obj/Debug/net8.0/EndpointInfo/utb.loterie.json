{
  "openapi": "3.0.4",
  "info": {
    "title": "utb.loterie",
    "version": "1.0"
  },
  "paths": {
    "/api/Bets": {
      "post": {
        "tags": [
          "Bets"
        ],
        "summary": "Umístí novou sázku a provede atomickou finanční transakci (odečtení ze zůstatku).",
        "requestBody": {
          "description": "Obsahuje UserID, výši sázky (Stake) a seznam vybraných tipů (Selections).",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceBetRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceBetRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceBetRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Bet": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "walletId": {
            "type": "string",
            "format": "uuid"
          },
          "stake": {
            "type": "number",
            "format": "double"
          },
          "potentialPayout": {
            "type": "number",
            "format": "double"
          },
          "status": {
            "maxLength": 32,
            "type": "string",
            "nullable": true
          },
          "placedAt": {
            "type": "string",
            "format": "date-time"
          },
          "settledAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "wallet": {
            "$ref": "#/components/schemas/Wallet"
          },
          "selections": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BetSelection"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "BetSelection": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "betId": {
            "type": "string",
            "format": "uuid"
          },
          "bet": {
            "$ref": "#/components/schemas/Bet"
          },
          "marketId": {
            "type": "string",
            "format": "uuid"
          },
          "oddsId": {
            "type": "string",
            "format": "uuid"
          },
          "selection": {
            "maxLength": 255,
            "type": "string",
            "nullable": true
          },
          "decimalOdds": {
            "type": "number",
            "format": "double"
          },
          "settlementStatus": {
            "maxLength": 20,
            "type": "string",
            "nullable": true
          },
          "winningOutcomeKey": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PlaceBetRequest": {
        "required": [
          "selections",
          "stake",
          "userId"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "stake": {
            "maximum": 1000000,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "selections": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BetSelection"
            }
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "Wallet": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "currency": {
            "maxLength": 3,
            "type": "string",
            "nullable": true
          },
          "balance": {
            "type": "number",
            "format": "double"
          },
          "reserved": {
            "type": "number",
            "format": "double"
          },
          "concurrencyToken": {
            "type": "string",
            "format": "byte",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}
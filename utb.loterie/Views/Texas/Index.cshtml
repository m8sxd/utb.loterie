@{
    ViewData["Title"] = "Texas Hold'em";
}

<style>
    .poker-table {
        background-color: #0f3b25;
        border: 15px solid #5c3a13;
        border-radius: 50px;
        padding: 20px;
        box-shadow: inset 0 0 150px #000;
        min-height: 650px;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }

    .dealer-section, .player-section {
        text-align: center;
        margin: 10px;
    }

    .community-section {
        background: rgba(0,0,0,0.3);
        padding: 15px 30px;
        border-radius: 50px;
        border: 2px solid rgba(255,255,255,0.1);
        min-width: 400px;
        min-height: 140px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 10px 0;
    }

    .cards-row {
        display: flex;
        gap: 10px;
        justify-content: center;
        min-height: 120px;
    }

    .card {
        width: 80px;
        height: 115px;
        background: #fff;
        border-radius: 6px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 5px;
        font-weight: bold;
        font-size: 1.4rem;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.6);
        transition: transform 0.3s;
        color: #000;
    }

        .card.back {
            background: repeating-linear-gradient(45deg, #b71c1c, #b71c1c 10px, #880e4f 10px, #880e4f 20px);
            border: 3px solid white;
        }

    .suit-hearts, .suit-diamonds {
        color: #d00000;
    }

    .suit-clubs, .suit-spades {
        color: #222;
    }

    .pot-display {
        color: #d4af37;
        font-size: 1.8rem;
        font-weight: bold;
        text-shadow: 0 0 10px black;
        margin-bottom: 5px;
        text-transform: uppercase;
        background: rgba(0,0,0,0.6);
        padding: 5px 20px;
        border-radius: 20px;
        border: 1px solid #d4af37;
    }

    .controls-bar {
        background: rgba(0,0,0,0.8);
        padding: 20px;
        border-radius: 20px;
        border: 2px solid #d4af37;
        text-align: center;
        min-width: 300px;
    }

    .hand-strength-badge {
        display: inline-block;
        background-color: #222;
        color: #d4af37;
        border: 1px solid #d4af37;
        padding: 5px 15px;
        border-radius: 15px;
        font-weight: bold;
        margin-bottom: 10px;
        text-transform: uppercase;
        box-shadow: 0 0 10px rgba(212, 175, 55, 0.3);
    }

    .win-pulse {
        animation: winPulse 1s infinite alternate;
    }

    @@keyframes winPulse {
        from {
            transform: scale(1);
        }

        to {
            transform: scale(1.05);
        }
    }
</style>

<div class="container mt-5 mb-5">
    <div class="text-center mb-3">
        <h1 class="display-4 fw-bold text-white">TEXAS <span class="text-warning">HOLD'EM</span></h1>
    </div>

    <div class="poker-table">

        <div class="dealer-section">
            <div class="text-white mb-2 opacity-50 fw-bold">DEALER</div>
            <div id="dealerCards" class="cards-row">
                <div class="card back"></div><div class="card back"></div>
            </div>
        </div>

        <div class="text-center">
            <div id="potDisplay" class="pot-display">POT: 0 KČ</div>

            <div class="community-section">
                <div id="communityCards" class="cards-row">
                    <div style="color:rgba(255,255,255,0.2); font-weight:bold; align-self:center;">COMMUNITY CARDS</div>
                </div>
            </div>
        </div>

        <div class="player-section">
            <div class="text-white mb-2 fw-bold text-warning">TY (Hráč)</div>

            <div id="handStrengthDisplay" class="hand-strength-badge" style="display:none;"></div>

            <div id="playerCards" class="cards-row"></div>
        </div>

        <div class="controls-bar">
            <h4 id="statusMsg" class="text-white mb-3 fw-bold">Vsaďte si a začněte</h4>

            <div id="startControls">
                <div class="input-group justify-content-center mb-0">
                    <span class="input-group-text bg-dark text-warning border-secondary fw-bold">SÁZKA</span>
                    <input type="number" id="stake" class="form-control text-center fw-bold bg-dark text-white border-secondary" value="100" style="max-width: 100px;">
                    <button onclick="start()" class="btn btn-warning fw-bold">ROZDAT</button>
                </div>
            </div>

            <div id="gameControls" style="display:none;">
                <div class="d-flex justify-content-center gap-2">
                    <button onclick="act('Check')" class="btn btn-primary fw-bold px-4">CHECK (0 Kč)</button>
                    <button onclick="act('Bet')" class="btn btn-warning fw-bold px-4">BET (+Sázka)</button>
                    <button onclick="fold()" class="btn btn-danger fw-bold px-4">FOLD</button>
                </div>
            </div>

            <button id="restartBtn" onclick="location.reload()" class="btn btn-outline-light mt-2 px-5 fw-bold" style="display:none;">NOVÁ HRA</button>
        </div>
    </div>
</div>

<script>

    async function start() {
        const stake = document.getElementById('stake').value;
        const statusEl = document.getElementById('statusMsg');

        try {
            const res = await fetch('/Texas/Start', {
                method: 'POST', headers: {'Content-Type':'application/json'},
                body: JSON.stringify({ stake: parseFloat(stake) })
            });

            if (!res.ok) {
                const err = await res.json();
                throw new Error(err.message || "Chyba serveru");
            }

            updateUI(await res.json());
        } catch (e) {
            statusEl.innerText = e.message;
            statusEl.className = "text-danger fw-bold mb-3";
        }
    }

    async function act(action) {
        const statusEl = document.getElementById('statusMsg');
        try {
            const res = await fetch('/Texas/Action', {
                method: 'POST', headers: {'Content-Type':'application/json'},
                body: JSON.stringify({ action: action })
            });

            if (!res.ok) {
                const err = await res.json();
                throw new Error(err.message || "Chyba serveru");
            }

            updateUI(await res.json());
        } catch (e) {
            statusEl.innerText = e.message;
            statusEl.className = "text-danger fw-bold mb-3";
        }
    }

    async function fold() {
        await fetch('/Texas/Fold', { method: 'POST' });
        location.reload();
    }


    function updateUI(data) {
        document.getElementById('startControls').style.display = 'none';

        if (data.gameOver) {
            document.getElementById('gameControls').style.display = 'none';
            document.getElementById('restartBtn').style.display = 'inline-block';
        } else {
            document.getElementById('gameControls').style.display = 'block';
        }

        const statusEl = document.getElementById('statusMsg');
        statusEl.innerText = data.message;
        if(data.isWin) statusEl.className = "text-success fw-bold mb-3 win-pulse";
        else if (data.gameOver && !data.isWin) statusEl.className = "text-danger fw-bold mb-3";
        else statusEl.className = "text-white mb-3 fw-bold";

        document.getElementById('potDisplay').innerText = `POT: ${new Intl.NumberFormat('cs-CZ').format(data.pot)} KČ`;

        const strengthEl = document.getElementById('handStrengthDisplay');
        if (data.handStrength) {
            strengthEl.innerText = data.handStrength;
            strengthEl.style.display = "inline-block";
        }

        renderCards('playerCards', data.playerHole);
        renderCards('dealerCards', data.dealerHole);
        renderCards('communityCards', data.community);

        const bal = document.getElementById('userBalance');
        if(bal) bal.innerText = new Intl.NumberFormat('cs-CZ').format(data.newBalance) + " Kč";
    }

    function renderCards(id, cards) {
        const div = document.getElementById(id);
        div.innerHTML = "";

        if (!cards || cards.length === 0) return;

        cards.forEach(c => {
            const el = document.createElement('div');

            if (!c.isFaceUp) {
                el.className = "card back";
                div.appendChild(el);
                return;
            }

            const suitClass = (c.suit === "Hearts" || c.suit === "Diamonds") ? "suit-hearts" : "suit-clubs";
            const sym = {'Hearts':'♥️','Diamonds':'♦️','Clubs':'♣️','Spades':'♠️'}[c.suit] || c.suit;

            const rankMap = {
                'Ace': 'A', 'King': 'K', 'Queen': 'Q', 'Jack': 'J',
                'Ten': '10', 'Nine': '9', 'Eight': '8', 'Seven': '7',
                'Six': '6', 'Five': '5', 'Four': '4', 'Three': '3', 'Two': '2'
            };

            let displayRank = c.rank;
            if (rankMap[c.rank]) displayRank = rankMap[c.rank];
            else if (typeof c.rank === 'string') displayRank = c.rank.substring(0,1);

            el.className = `card ${suitClass}`;
            el.innerHTML = `<div>${displayRank}</div><div style="font-size:2rem;text-align:center">${sym}</div><div style="transform:rotate(180deg)">${displayRank}</div>`;
            div.appendChild(el);
        });
    }
</script>
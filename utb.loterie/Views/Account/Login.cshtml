@model utb.loterie.Models.LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-center" style="max-width: 400px;">
    <h2 class="text-gold mb-4">PŘIHLÁŠENÍ</h2>

    <div class="card bg-dark border-secondary text-white">
        <div class="card-body p-4">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3 text-start">
                    <label asp-for="Username" class="form-label">Uživatelské jméno</label>
                    <input asp-for="Username" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-4 text-start">
                    <label asp-for="Password" class="form-label">Heslo</label>
                    <input asp-for="Password" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-gold w-100 py-2 fw-bold">PŘIHLÁSIT SE</button>
            </form>
        </div>
    </div>

    <p class="mt-3 text-muted">
        Ještě nemáte účet? <a asp-action="Register" class="text-gold text-decoration-none">Registrujte se zde</a>
    </p>
</div>
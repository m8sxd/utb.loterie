@using System.Security.Claims
@using CasinoApp.Application.Interfaces
@inject IWalletRepository WalletRepository

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTB Casino</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: #121212; color: #e0e0e0;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom border-secondary box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    🎰 UTB <span class="text-warning">CASINO</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Domů</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-controller="Games" asp-action="Dice">
                                <i class="fas fa-dice me-1"></i> Lucky Dice
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-controller="Games" asp-action="Roulette">
                                <i class="fas fa-circle-notch me-1"></i> Ruleta
                            </a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger fw-bold border border-danger rounded ms-2 px-3" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-user-shield me-1"></i> ADMIN PANEL
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            decimal balance = 0;
                            var userIdStr = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            if (int.TryParse(userIdStr, out int userId))
                            {
                                var wallet = await WalletRepository.GetByUserIdAsync(userId);
                                if (wallet != null)
                                {
                                    balance = wallet.Balance;
                                }
                            }
                            <li class="nav-item me-3 border-end border-secondary pe-3 d-flex align-items-center gap-3">
                                <div class="d-flex flex-column align-items-end lh-1">
                                    <span class="text-secondary" style="font-size: 0.7rem; text-transform: uppercase;">Zůstatek</span>
                                    <span id="userBalance" class="text-warning fw-bold font-monospace" style="font-size: 1.1rem;">
                                        @balance.ToString("N0") Kč
                                    </span>
                                </div>

                                <button type="button" class="btn btn-success btn-sm fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#depositModal">
                                    <i class="fas fa-wallet me-1"></i> Vložit
                                </button>
                            </li>

                            <li class="nav-item me-3">
                                <span class="text-white fw-bold">
                                    <i class="fas fa-user-circle text-muted me-1"></i> @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Odhlásit se">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                    Přihlásit
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning btn-sm fw-bold text-dark" asp-controller="Account" asp-action="Register">
                                    Registrovat
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-secondary bg-dark mt-auto py-3">
        <div class="container text-center">
            &copy; 2025 - UTB Casino - <span class="text-warning">Hrajte zodpovědně</span>
        </div>
    </footer>
    <div class="modal fade" id="depositModal" tabindex="-1" aria-labelledby="depositLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-white border border-secondary shadow-lg">

                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-warning" id="depositLabel">
                        <i class="fas fa-coins me-2"></i>Dobít kredit
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body text-center p-4">
                    <p class="text-muted mb-4">Vyberte částku pro vložení na váš herní účet (Demo).</p>

                    <form method="post" asp-controller="Wallet" asp-action="Deposit">

                        <div class="d-grid gap-3 mb-3">

                            <button type="submit" name="amount" value="1000" class="btn btn-outline-success py-3 d-flex justify-content-center align-items-center gap-2 deposit-btn">
                                <span class="fw-bold">+ 1 000 Kč</span>
                                <span class="badge bg-success">Start</span>
                            </button>

                            <button type="submit" name="amount" value="5000" class="btn btn-outline-warning py-3 d-flex justify-content-center align-items-center gap-2 deposit-btn">
                                <span class="fw-bold">+ 5 000 Kč</span>
                                <span class="badge bg-warning text-dark">Hráč</span>
                            </button>

                            <button type="submit" name="amount" value="50000" class="btn btn-outline-danger py-3 d-flex justify-content-center align-items-center gap-2 deposit-btn">
                                <span class="fw-bold">+ 50 000 Kč</span>
                                <span class="badge bg-danger">VIP</span>
                            </button>

                        </div>

                        <p class="small text-muted mt-3 mb-0">
                            <i class="fas fa-info-circle me-1"></i>Peníze budou ihned připsány.
                        </p>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
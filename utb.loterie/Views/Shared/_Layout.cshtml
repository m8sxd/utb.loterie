@using System.Security.Claims
@using CasinoApp.Application.Interfaces
@inject IWalletRepository WalletRepository

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTB Casino</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom border-secondary box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    🎰 UTB <span class="text-warning">CASINO</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Domů</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-controller="Games" asp-action="Dice">
                                <i class="fas fa-dice me-1"></i> Lucky Dice
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" asp-controller="Games" asp-action="Roulette">
                                <i class="fas fa-circle-notch me-1"></i> Ruleta
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            // --- LOGIKA PRO ZÍSKÁNÍ ZŮSTATKU ---
                            decimal balance = 0;
                            var userIdStr = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            if (int.TryParse(userIdStr, out int userId))
                            {
                                var wallet = await WalletRepository.GetByUserIdAsync(userId);
                                if (wallet != null)
                                {
                                    balance = wallet.Balance;
                                }
                            }
                            // ------------------------------------

                            <li class="nav-item me-3 border-end border-secondary pe-3">
                                <div class="d-flex flex-column align-items-end lh-1">
                                    <span class="text-secondary" style="font-size: 0.7rem; text-transform: uppercase;">Zůstatek</span>
                                    <span id="userBalance" class="text-warning fw-bold font-monospace" style="font-size: 1.1rem;">
                                        @balance.ToString("N0") Kč
                                    </span>
                                </div>
                            </li>

                            <li class="nav-item me-3">
                                <span class="text-white fw-bold">
                                    <i class="fas fa-user-circle text-muted me-1"></i> @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Odhlásit se">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                    Přihlásit
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning btn-sm fw-bold text-dark" asp-controller="Account" asp-action="Register">
                                    Registrovat
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-secondary bg-dark mt-auto py-3">
        <div class="container text-center">
            &copy; 2025 - UTB Casino - <span class="text-warning">Hrajte zodpovědně</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
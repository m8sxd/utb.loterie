@model List<utb.loterie.Controllers.UserAdminViewModel>

@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-warning fw-bold"><i class="fas fa-users-cog me-2"></i> Spr√°va u≈æivatel≈Ø</h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Zpƒõt na web</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success fw-bold">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger fw-bold">@TempData["Error"]</div>
    }

    <div class="card bg-dark border border-secondary shadow-lg">
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0 align-middle">
                <thead class="bg-black text-warning text-uppercase">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Jm√©no</th>
                        <th>Z≈Østatek</th>
                        <th class="text-center">Stav</th>
                        <th class="text-end pe-4">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted">#@user.Id</td>
                            <td class="fw-bold fs-5">@user.Username <div class="small text-muted" style="font-size:0.8rem">@user.Email</div></td>

                            <td class="text-info fw-bold">
                                @user.Balance.ToString("N0") Kƒç
                            </td>

                            <td class="text-center">
                                @if (user.IsBanned)
                                {
                                    <span class="badge bg-danger">‚õî ZABANOV√ÅN</span>
                                }
                                else
                                {

                                    <span class="badge bg-success">‚úÖ AKTIVN√ç</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <button type="button" class="btn btn-sm btn-outline-warning me-2"
                                        data-bs-toggle="modal"
                                        data-bs-target="#moneyModal"
                                        onclick="setModalUser(@user.Id, '@user.Username')">
                                    <i class="fas fa-coins"></i> Upravit
                                </button>

                                <form asp-action="ToggleBan" asp-route-userId="@user.Id" method="post" style="display:inline;">
                                    @if (user.IsBanned)
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-success"><i class="fas fa-unlock"></i></button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-ban"></i></button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="moneyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-warning">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-warning">üí∞ Upravit z≈Østatek</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ChangeBalance" method="post">
                <div class="modal-body">
                    <p>Hr√°ƒç: <span id="modalUserName" class="fw-bold text-info"></span></p>
                    <input type="hidden" id="modalUserId" name="userId" />

                    <label class="form-label">ƒå√°stka (Kƒç)</label>
                    <div class="input-group">
                        <input type="number" name="amount" class="form-control bg-black text-white border-secondary fw-bold" placeholder="Nap≈ô. 1000 nebo -500" required>
                        <span class="input-group-text bg-secondary text-white">Kƒç</span>
                    </div>
                    <small class="text-muted">Pro odeƒçten√≠ penƒõz zadej z√°porn√© ƒç√≠slo (nap≈ô. -500).</small>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zru≈°it</button>
                    <button type="submit" class="btn btn-warning fw-bold">Potvrdit zmƒõnu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setModalUser(id, name) {
        document.getElementById('modalUserId').value = id;
        document.getElementById('modalUserName').innerText = name;
    }
</script>